#!/usr/bin/env ruby
# Id$ nonnax 2021-12-12 19:16:55 +0800
require_relative '../wup/wup'
require 'optparse'

key=ARGV.first

opts={}
OptionParser.new do |opt|
  opt.banner='wls <arg> | [option] <arg>'
  opt.on '-n[LINES]', '--num=[LINES]', 'Number of lines to show'
end.parse!(into: opts)

numlines=-1

case 
when opts[:num]
  numlines=opts[:num].to_i
  key=ARGV.last
else
end

Wup.new.tap do |wup|
  wup 
  .select{|k, v| /#{key}/.match(k)}
  .each do |kmatched, v|
    puts kmatched
    puts "-[#{kmatched.split(':').first}]".rjust(80, '-')
    
    v=wup.to_dec(kmatched, v)
    v.split(/\n/)[0..numlines].each do |l|
      puts l
    end
    puts    
  end  
end
